// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  status      String   @default("Planning") // Planning, In Development, Coming Soon, Deployed
  category    String   // "ai" or "web3"
  link        String?  // Optional link to the product
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Activity {
  id          Int      @id @default(autoincrement())
  action      String   // "add", "edit", "delete"
  productName String
  category    String   // "AI Agent" or "Web3"
  adminUser   String   // Who performed the action
  createdAt   DateTime @default(now())
}

model Subscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}
